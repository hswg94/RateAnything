<% layout('/layouts/boilerplate')%>
<div class= "mb-5" id="map" style="width: 100%; height: 500px"></div>
<h1>All Items</h1>
    <% for (let campground of campgrounds){%>
        <div class="card mb-2">
            <div class="row">
                <div class="col-md-4">
                    <% if (campground.images[0]) { %>
                        <img crossorigin="anonymous" class="img-fluid" alt="" src="<%=campground.images[0].url%>">
                    <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%=campground.title%></h5>
                        <p class="card-text"><%=campground.description%></p>
                        <p class="card-text">
                            <small class="text-muted"><%=campground.location%></small>
                        </p>
                        <a class="btn btn-primary" href="/items/<%=campground.id%>">View <%=campground.title%></a>
                    </div>
                </div>
            </div>
        </div>
    <%}%>

<script>
    const mapBoxToken = '<%-process.env.MAPBOX_TOKEN%>';
    const campgroundsData = {
        type: "FeatureCollection",
        features: <%-JSON.stringify(campgrounds)%>
    };
</script>
<script src="/javascripts/clusterMap.js"></script>